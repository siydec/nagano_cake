<div class="container">
  <h2 class="mt-5">会員一覧</h2>
  <div class="row">
    <div class="col-8 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <th><%= customer.id %></th>
            <th>
            <%= link_to controller: "customers", action: "show", id: customer do %>
            <%= customer.last_name + customer.first_name %>
            <% end %>
            </th>
            <th><%= customer.email %></th>
            <th><% if customer.is_active == true %>
                <p>有効</p>
                <% else %>
                <p>無効</p>
                <% end %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
