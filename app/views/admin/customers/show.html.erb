<div class="container">
  <h2><%= @customer.first_name + @customer.last_name %>さんの会員詳細</h2>
  <div class="row">
    <div class="col">
      <table class="table">
        <tr><td>会員ID</td><td><%= @customer.id %></td></tr>
        <tr><td>氏名</td><td><%= @customer.last_name + @customer.first_name %></td></tr>
        <tr><td>フリガナ</td><td><%= @customer.last_name_kana + @customer.first_name_kana %></td></tr>
        <tr><td>郵便番号</td><td><%= @customer.postal_code %></td></tr>
        <tr><td>住所</td><td><%= @customer.address %></td></tr>
        <tr><td>電話番号</td><td><%= @customer.telephone_number %></td></tr>
        <tr><td>メールアドレス</td><td><%= @customer.email %></td></tr>
        <tr><td>会員ステータス</td><td></td></tr>
        <tr><td></td><td><%= link_to  controller: "customers", action: "edit", id: @customer do %>
           <btn class="btn btn-success">編集する</btn>
           <% end %></td>

           </tr>
      </table>

    </div>
  </div>
</div>
