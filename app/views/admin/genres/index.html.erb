<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h2>ジャンル一覧・追加</h2>

      <%= form_with model: [:admin, @genre], local: true do |f| %>
       <div class="field mt-5">
         <h4>ジャンル名</h4>
         <%= f.text_field :name %>
         <%= f.submit "新規登録" %>
         <% end %>
       </div>

       <div class="col-6 mt-5">
         <table class="table">

         <thead>
         <tr>
           <th>ジャンル</th>
           <th></th>
         </tr>
         </thead>
         <tbody>
          <% @genres.each do |genre| %>
          <tr>
           <td><%= genre.name %></td>
           <td><%= link_to "編集", controller: "genres", action: "edit", id: genre %></td>
         </tr>
         <% end %>
         </tbody>
         </table>

        </div>



    </div>
  </div>
</div>