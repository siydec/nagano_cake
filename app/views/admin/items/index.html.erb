<div class="container">
  <h2 class="mt-5">商品一覧</h2>
  <p class="text-right">
   <%= link_to new_admin_item_path do  %>
  <button type="button" class="btn btn-primary rounded-circle p-0" style="width:3rem;height:3rem;">＋</button>
   <% end %>
  </p>
  <div class="row">
    <div class="col mt-5">
      <table class="table mt-5">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <th><%= item.id %></th>
            <th>
            <%= link_to controller: "items", action: "show", id: item do %>
            <%= item.name %>
            <% end %>
            </th>
            <th><%= item.price.to_s(:delimited)%></th>
            <th><%= item.genre.name%></th>
            <th></th>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%#= paginate @items %>
    </div>
  </div>
</div>