<div class="container">
  <div class="row">
    <div class="col-8 mt-3">
      <h3>商品新規登録</h3>
      <div class="col-8 mt-5 mx-5">
      <table class="table">
      <%= form_with model: [:admin, @item], local: true do |f| %>
      <tr><td class="mr-5">商品画像</td><td><%= f.file_field :image, accept: "image/*" %></td></tr>
      <tr><td class="mr-5">商品名</td><td><%= f.text_field :name %></td></tr>
      <tr><td class="mr-5">商品説明</td><td><%= f.text_area :introduction %></td></tr>
      <tr><td class="mr-5">税抜価格</td><td><%= f.number_field :price %>円</td></tr>
      <tr><td><%= f.submit "新規登録", class:"btn btn-success" %></td></tr>
      <% end %>
      </table>
      </div>
    </div>
  </div>
</div>
