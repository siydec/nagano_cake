<div class="container">
      <h2 class="mt-5">商品詳細</h2>
  <div class="row">

     <div class="col-4 mt-5">
     <%= image_tag @item.get_image, size: "300x300" %>
     </div>
     <div class="col-6 mt-5">
     <table class="table">
       <tr><td>商品名</td><td><%= @item.name %></td></tr>
       <tr><td>商品説明</td><td><%= @item.introduction %></td></tr>
       <tr><td>ジャンル</td><td><%= @item.genre.name %></td></tr>
       <tr><td>税込価格</br>(税抜価格)</td>
       <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td></tr>
       <tr><td>販売ステータス</td><td></td></tr>
       <tr><td></td><td><%= link_to  controller: "items", action: "edit", id: @item do %>
           <btn class="btn btn-success">編集する</btn>
           <% end %>
           </td></tr>
     </table>
    </div>
  </div>
</div>