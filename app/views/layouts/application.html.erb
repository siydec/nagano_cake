<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <% if customer_signed_in? %>
        <div>
          <%= link_to "マイページ", public_about_path %>
          <%= link_to "商品一覧", public_items_path %>
          <%= link_to "カート", public_cart_items_path %>
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
        </div>
        <% elsif admin_signed_in? %>
        <%= link_to "商品一覧", admin_items_path %>
        <%= link_to "会員一覧", admin_customers_path %>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        <div>
        </div>
        <% else %>
        <%= link_to "About", public_about_path, method: :get %>
        <%= link_to "商品一覧", public_items_path %>
        <%= link_to "新規登録", new_customer_registration_path %>
        <%= link_to "ログイン", customer_session_path, method: :get %>
        <% end %>

      </div>
    </header>
    <%= yield %>
  </body>
</html>
