<div class="container">

 <div class="row">
  <div class="col-9 mt-5">
    <h2>配送先編集</h2>
    <%= form_with model: @address, local: true do |f| %>
    <table class="table mt-5 table-borderless">
     <tr><td>郵便番号(ハイフンなし)</td><td><%= f.text_field :postal_code %></td></tr>
     <tr><td>住所</td><td><%= f.text_field :addresses, size: "40" %></td></tr>
     <tr><td>宛名</td><td><%= f.text_field :name %></td><td></td><td><%= f.submit "変更内容を保存", class:"btn btn-success" %></td></tr>
    </table>
     <% end %>
    </table>
  </div>
 </div>
</div>