<div class="container">
  <h4 class="mt-5">会員情報編集</h4>
  <div class="row">
    <div class="col-8">
       <%= form_with model: [:public, @customer], local: true do |f| %>
      <table class="table">

        <tr><td>氏名</td>
        <td><%= f.text_field :last_name, placeholder: @customer.last_name %></td>
        <td><%= f.text_field :first_name, placeholder: @customer.first_name %></td></tr>

        <tr><td>フリガナ</td>
        <td><%= f.text_field :last_name_kana, placeholder: @customer.last_name_kana %></td>
        <td><%= f.text_field :first_name_kana, placeholder: @customer.first_name_kana %></td><td></td></tr>
        <tr><td>郵便番号</td><td><%= f.text_field:postal_code, placeholder:  @customer.postal_code %></td><td></td></tr>
        <tr><td>住所</td><td><%= f.text_field:address, placeholder:  @customer.address %></td><td></td></tr>
        <tr><td>電話番号</td><td><%= f.text_field:telephone_number, placeholder:  @customer.telephone_number %></td><td></td></tr>
        <tr><td>メールアドレス</td><td><%= f.text_field:email, placeholder:  @customer.email %></td><td></td></tr>
        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
          <td>
          <p class="btn btn-danger",>
          <%= link_to "退会する", controller:"public/customers", action:"unsubscribe" %></td>
          </p>
        </tr>
      </table>
       <% end %>

    </div>
  </div>
</div>

