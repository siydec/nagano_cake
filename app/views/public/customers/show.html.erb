<h1>Public::Customers#show</h1>
<p>Find me in app/views/public/customers/show.html.erb</p>

<div class="container">
  <h3 class="mt-5">マイページ</h3>
  <div class="row">
    <div class="col-6">
     <h2 class="mt-5">登録情報</h2>
     <p class="btn btn-success">
     <%= link_to controller:"public/customers", action:"edit" do %>
     <%= "編集する" %>
     <% end %>
     </p>
     <table class="table mt-2">
       <tr><td>氏名</td><td><%= @customer.last_name + @customer.first_name %></td></tr>
       <tr><td>カナ</td><td><%= @customer.last_name_kana + @customer.first_name_kana %></td></tr>
       <tr><td>郵便番号</td><td><%= @customer.postal_code %></td></tr>
       <tr><td>住所</td><td><%= @customer.address %></td></tr>
       <tr><td>電話番号</td><td><%= @customer.telephone_number %></td></tr>
       <tr><td>メールアドレス</td><td><%= @customer.email %></td></tr>
     </table>
    </div>
  </div>
  <div class="row-4">

      <div class="col"><h2 class="mt-3">配送先</h2><p class="btn btn-primary">一覧を見る</p></div>
      <div class="col"><h2 class="mt-2">注文履歴</h2><p class="btn btn-primary">一覧を見る</p></div>
  </div>
</div>