<div class="container mt-5">
  <h3>注文情報確認</h3>
  <div class="row">
    <div class="col-7">
      <table class="table mt-5">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.add_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <% @total += cart_item.subtotal %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col">
      <%= form_with model: [:public, @order], local: true do |f| %>
      <table class="table mt-5">
        <tr>
          <th>送料</th>
          <td>
            <%= f.hidden_field :postage, :value => @order.postage %>
            <%= @order.postage %>
          </td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td>
            <%= @total.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td>
            <% @billing_amount = @total + @order.postage %>
            <%= @billing_amount.to_s(:delimited) %>
            <%= f.hidden_field :billing_amount, :value => @billing_amount %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div ckass="col-3">
      <table class="table mt-3">
        <tr>
          <th>支払方法</th>
          <td>
            <% if @order.payment == "credit_card" %>
            <%= "クレジットカード" %>
            <%= f.hidden_field :payment, :value => @order.payment %>
            <% end %>
            <%if @order.payment == "transfer" %>
            <%= "銀行振込" %>
            <%= f.hidden_field :payment, :value => @order.payment %>
            <% end %>
          </td>
        </tr>
        <th>お届け先</th>
        <td>
          <%= @order.address_display_order %>
          <%= f.hidden_field :delivery_address, :value => @order.delivery_address %>
          <%= f.hidden_field :delivery_name, :value => @order.delivery_name %>
          <%= f.hidden_field :delivery_postal_code, :value => @order.delivery_postal_code %>
        </td>
      </table>
    </div>
  </div>
  <p class="text-center"><%= f.submit "注文を確定する", class:"btn btn-success" %></p>
  <% end %>
</div>
