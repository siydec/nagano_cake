<div class="container mt-5">
  <div class="row mt-5">

    <div class="col-12">
      <h3>注文履歴一覧</h3>
      <table class="table mt-5">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= order.address_display_order %></td>

            <td>
              <% order.order_details.each do |detail| %>
              <%= detail.item.name %></br>
              <% end %>
            </td>

            <td>
              <% @total=800 %>
              <% order.order_details.each do |detail| %>
              <% @total += detail.purchase_price * detail.amount %>
              <% end %>
              <%= @total.to_s(:delimited) %>
              </td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to "注文詳細", controller: "orders", action:"show", id: order.id %></td>
          </tr>
          <% end %>

        </tbody>
      </table>

    </div>
  </div>
</div>