<div class="container">
  <h3 class="mt-5">注文履歴詳細</h3>
  <div class="row">
    <div class="col-6 mt-5">
     <table class="table">
       <h6>注文情報</h6>
       <tr>
         <th>注文日</th>
         <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
       </tr>
       <tr>
         <th>配送先</th>
         <td>
           〒<%= @order.delivery_postal_code %></br>
             <%= @order.delivery_address %></br>
             <%= @order.delivery_name %>
           </td>
       </tr>
       <tr>
         <th>支払方法</th>
         <td><%= @order.payment_i18n %></td>
       </tr>
       <tr>
         <th>ステータス</th>
         <td><%= @order.status_i18n %></td>
       </tr>
     </table>
    </div>
    <div class="col-4 mt-5">
      <table class="table">
        <h6>請求情報</h6>
        <tr>
          <th>商品合計</th>
          <td><%= @order.billing_amount.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.order_total.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <h6>注文内容</h6>
      <table class="table">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |detail| %>
          <tr>
            <td><%= detail.item.name %></td>
            <td><%= detail.purchase_price %></td>
            <td><%= detail.amount %></td>
            <td><%= detail.purchase_price * detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>